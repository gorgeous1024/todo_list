# ===========================================
# TODO LIST APPLICATION - ENVIRONMENT CONFIG
# ===========================================

# API Configuration
PUBLIC_API_BASE_URL=http://localhost:8000/api
PUBLIC_API_TIMEOUT=10000

# Application Configuration
PUBLIC_APP_NAME=Todo List
PUBLIC_APP_VERSION=1.0.0
PUBLIC_APP_DESCRIPTION=A modern task management application

# Development Configuration
NODE_ENV=development
PUBLIC_DEV_MODE=true

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ENABLE_DEBUG_LOGS=true
PUBLIC_ENABLE_OFFLINE_MODE=false

# UI Configuration
PUBLIC_DEFAULT_THEME=system
PUBLIC_DEFAULT_LANGUAGE=en
PUBLIC_ITEMS_PER_PAGE=10

# Security Configuration
PUBLIC_ENABLE_CSP=true
PUBLIC_ENABLE_HSTS=true

# Performance Configuration
PUBLIC_ENABLE_LAZY_LOADING=true
PUBLIC_CACHE_DURATION=300000

# Testing Configuration (for CI/CD)
CI=false

# Deployment Configuration (Vercel)
# VERCEL_TOKEN=your_vercel_token_here
# VERCEL_ORG_ID=your_org_id_here
# VERCEL_PROJECT_ID=your_project_id_here

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/todo_db
# REDIS_URL=redis://localhost:6379

# External Services (if needed)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here
